extends ../layouts/common

block content
  if errors
    each error in errors
      alert.alert-danger= error

  form(action="/users", method="get")
    label(for='name') Name: 
    input#name(type="text", name="q", value=value)
    button(type="submit") Search user
  p Users List:
    ul
      each val in users
        li= `${val.name}`
          a(href=`/users/${val._id}/delete`) Delete
          a(href=`/users/${val._id}/update`) Update name
  form(action="/users/add", method="post")
    label(for='name') Name:
    input#name(type="text", name="name")
    label(for='description') Email:
    input#description(type="email", name="email")
    button Add user